package logic;

import java.math.BigInteger;
import java.security.SecureRandom;
import java.util.Random;

public class Usuario {

	private String username;
	private String password;
	
	private String name;
	private String surname;
	private String ID;
	private String phoneNumber;
	private String paypalAccount;
	private String email;
	

	public Usuario(String username, String password, String name, String surname, String iD, String phoneNumber,
			String email) {
		super();
		this.username = username;
		this.password = password;
		//in IGU create another field for password checking, and take into account if they are equal before storing.
		this.name = name;
		this.surname = surname;
		ID = iD;
		this.phoneNumber = phoneNumber;
		this.email = email;
		//Paypal Account is optional.
	}
	
	
	
	public Usuario(String name, String surname, String iD, String phoneNumber, String paypalAccount,
			String email) {
		super();
		SecureRandom rSecureRandom = new SecureRandom();
		String username= new BigInteger(130, rSecureRandom).toString(32);
		String password= new BigInteger(130, rSecureRandom).toString(32);
		setUsername(username);
		this.password=password;
		this.name = name;
		this.surname = surname;
		ID = iD;
		this.phoneNumber = phoneNumber;
		this.paypalAccount = paypalAccount;
		this.email = email;
	}



	public boolean isUserCorrect(String user, String pass){
		return (user.equalsIgnoreCase(username)&& pass.equals(password));
	}

	public String getUsername() {
		return username;
	}

	public void setUsername(String username) {
		this.username = username;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	public String getSurname() {
		return surname;
	}

	public void setSurname(String surname) {
		this.surname = surname;
	}

	public String getID() {
		return ID;
	}

	public void setID(String iD) {
		ID = iD;
	}

	public String getPhoneNumber() {
		return phoneNumber;
	}

	public void setPhoneNumber(String phoneNumber) {
		this.phoneNumber = phoneNumber;
	}

	public String getPaypalAccount() {
		return paypalAccount;
	}

	public void setPaypalAccount(String paypalAccount) {
		this.paypalAccount = paypalAccount;
	}

	public String getEmail() {
		return email;
	}

	public void setEmail(String email) {
		this.email = email;
	}
	
	
	
}
